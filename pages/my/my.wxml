<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  
  <view class="weui-cells weui-cells_after-title room-width">
    <navigator url="../publish/publish" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">投票发起记录</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="../subscare/subscare" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">投票参与记录</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="../feedback/feedback" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">用户反馈</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>